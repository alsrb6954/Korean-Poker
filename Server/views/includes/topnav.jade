        span.sr-only Toggle navigation
        span.icon.icon-bar
        span.icon.icon-bar
        span.icon.icon-bar
        span.icon.icon-bar        
    .collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-left
        if(!currentUser)
          li
            a.navbar-brand(href='/')
             i.fa.fa-home
        else
          li
            a.navbar-brand(href='/game')
              img.img-circle(src=currentUser.photoURL style="position: relative; top: -15px; float: left; left: -5px; width:50px")
            //- 나중에 이 부분 css 파일로 빼야함              
        if(!currentUser)
          li
            a.smoothScroll(href='/auth/facebook') 페이스북 로그인
